<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExchangeActivity">

    <TextView
        android:id="@+id/text_symbol"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/app_result_title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_amount"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="000.00"
        android:textSize="50sp"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_symbol" />

    <TextView
        android:id="@+id/result_time"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="HH:mm:ss"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_amount" />
</androidx.constraintlayout.widget.ConstraintLayout>